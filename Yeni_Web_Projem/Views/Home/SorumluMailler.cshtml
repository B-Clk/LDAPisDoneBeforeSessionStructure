@{
    ViewData["Title"] = "Sorumlu Olunan Mailler";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Sorumlu Olunan Mailler</h2>
                <div>
                    <span class="me-2">Hoş geldiniz, <strong>@ViewBag.UserEmail</strong></span>
                    <a asp-action="Logout" class="btn btn-outline-danger btn-sm">Çıkış Yap</a>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-info text-white align-items-center justify-content-between">
                    <h4>Yönettiğiniz Email Hesapları</h4>

                </div>
                <div>
                    <p style="margin-top: 20px;">
                        <a asp-controller="Home" asp-action="MailTalepFormu" class="btn btn-secondary w-100 mt-2">
                            Mail Talep Et
                        </a>
                    </p>
                </div>
                <!-- <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100">E-posta yetkisi talep et</button>
                </div> -->
                <div class="card-body">
                    <p class="card-text">Burada sorumlu olduğunuz email hesaplarını görebilirsiniz.</p>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Email Adresi</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Açıklama</th>
                                    <th>Tip</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
